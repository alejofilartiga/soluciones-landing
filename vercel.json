{
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "trailingSlash": false,
    "redirects": [
        {
            "source": "/",
            "has": [
                {
                    "type": "host",
                    "value": "www\\.(.+)"
                }
            ],
            "destination": "https://$1",
            "permanent": true
        }
    ],
    "cleanUrls": true,
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "status": 404,
            "dest": "/404.html"
        }
    ]
}